<div class="row">
  <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
  <div class="col-lg-7">
    <div class="p-5">
      <div class="text-center">
        <h1 class="h4 text-gray-900 mb-4">用户注册</h1>
      </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name),html: {class: 'user'}) do |f| %>
        <div class="form-group row">
          <div class="col-sm-6 mb-3 mb-sm-0">
            <%= f.text_field :loginname, autofocus: true, autocomplete: "loginname",class: "form-control form-control-user",placeholder:"用户名" %>
          </div>
          <div class="col-sm-6">
            <%= f.text_field :phone, autofocus: true, autocomplete: "phone",class: "form-control form-control-user",placeholder:"手机号" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control form-control-user",placeholder:"邮箱" %>
        </div>
        <div class="form-group row">
          <div class="col-sm-6 mb-3 mb-sm-0">
            <%= f.password_field :password, autocomplete: "new-password",class: "form-control form-control-user",placeholder:"密码" %>
          </div>
          <div class="col-sm-6">
            <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control form-control-user",placeholder:"确认密码" %>
          </div>
        </div>
        <%= f.submit "注册",class: "btn btn-primary btn-user btn-block" %>
      <% end %>
      <hr>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>