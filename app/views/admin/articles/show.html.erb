<%= content_for :legend do %>
   <legend><h4>文章</h4></legend>
<% end %>
  <div class="text-left mt-3 ml-2">
    <%= link_to_back url: params[:back] || admin_articles_path  %>
  </div>
<div class="w-75 mx-auto my-5">
  <div class="row mt-2">
    <div class="col-2 font-weight-bold  py-2">标题</div>
    <div class="col-10 border  py-2"><%= @article.title %></div>
  </div>
  <div class="row mt-2">
    <div class="col-2 font-weight-bold  py-2">是否发布</div>
    <div class="col-10 border  py-2"><%= @article.published ? "是" : "否"  %></div>
  </div>
  <div class="row mt-2">
    <div class="col-2 font-weight-bold  py-2">文章发布时间</div>
    <div class="col-10 border  py-2"><%= @article.published_at&.strftime("%Y-%m-%d") %></div>
  </div>
  <div class="row mt-2">
    <div class="col-2 font-weight-bold  py-2">位置</div>
    <div class="col-10 border  py-2"><%= @article.position %></div>
  </div>
  <div class="row mt-2">
    <div class="col-2 font-weight-bold  py-2">分类</div>
    <div class="col-10 border  py-2">
    <%= @article.category.try(:name) %></div>
  </div>
  <div class="row mt-2">
    <div class="col-2 font-weight-bold  py-2">正文内容</div>
    <div class="col-10 border  py-2"><%=raw @article.content %></div>
  </div>
  <div class="row mt-2">
    <div class="col-2 font-weight-bold  py-2">文件</div>
    <div class="col-10 border  py-2">
      <% if @article.file.attached? %>
        <% if %w(jpg JPG jpeg JPEG gif GIF png PNG).include?(@article.file.blob.filename.to_s.split(".")[1])%>
          <%= image_tag(url_for(@article.file), style: "width: 150px; height: 150px;display: block")%>
        <% else %>
          <%= link_to @article.file.blob.filename.to_s, url_for(@article.file)%>
        <% end %>
      <% end %>  
    </div>
  </div>
  <div class="text-center mt-3">
    <%= link_to_back url: params[:back] || admin_articles_path  %>
  </div>
</div>