var d = dialog({
  id: 'edit_appropriation_dailog',
  title: '资金拨付修改',
  content: "<%= j(render partial: 'appropriation_form',locals:{url: update_appropriation_admin_project_path(@project,appropriation_id: @appropriation.id,  :back => request.fullpath)})  %>",
  okValue: '确定',
    ok: function () {
      this.title('提交中…');
      var form = document.querySelector('#appropriation_form');
      Rails.fire(form, 'submit');
      return false
    },
    cancelValue: '取消',
    cancel: function () {}
});
d.showModal();