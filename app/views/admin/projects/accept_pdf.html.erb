  .tc{
    text-align: center;
  }
  .tr{
    text-align: right;
  }
  .mb20{
    margin-bottom: 20px;
  }
  .mr50{
    margin-right: 50px;
  }
  .w-7{
    width:7%;
  }
  .w-56{
    width: 56%;
  }
  .w-30{
    width: 30%;
  }
  .w-50{
    width: 50%;
  }
    .h-100{
    height: 100px;
  }
  .h-200{
    height: 200px;
  }
  .h-400{
    height: 400px;
  }
  .h-300{
    height: 300px;
  }
  .b{
    font-weight: bold;
  }
  .title{
    text-align: center;
    font-size: 20px;
    color: #000;
  }
  .subtitle{
    display: flex;
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    justify-content: space-between;
    align-items: center;
    font-size: 14px;
    color: #333;
  }
  .table_form{
    font-size: 16px;
    border: 1px solid #333;
    border-bottom: 0;
    border-right: 0;
    color: #333;
    margin-top: 20px;
    width: 100%;
  }
  .table_form td{
    border-right: 1px solid #333;
    border-bottom: 1px solid #333;
