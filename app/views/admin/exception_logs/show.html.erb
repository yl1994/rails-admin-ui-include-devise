<%= content_for :legend do %>
   <legend><h4>异常日志详情</h4></legend>
<% end %>
  <div class="text-left mt-3">
    <%= link_to_back url: params[:back] || admin_exception_logs_path  %>
  </div>
<div class="w-75 mx-auto my-5">
  <div class="row mt-2">
    <div class="col-2 font-weight-bold  py-2">名称</div>
    <div class="col-10 border  py-2"><%= @exception_log.title %></div>
  </div>
  <div class="row mt-2">
    <div class="col-2 font-weight-bold  py-2">控制器</div>
    <div class="col-10 border  py-2"><%= @exception_log.controller %></div>
  </div>
  <div class="row mt-2">
    <div class="col-2 font-weight-bold  py-2">行为器</div>
    <div class="col-10 border  py-2"><%= @exception_log.action %></div>
  </div>
  <div class="row mt-2">
    <div class="col-2 font-weight-bold  py-2">参数名</div>
    <div class="col-10 border  py-2"><%= @exception_log.params %></div>
  </div>
  <div class="row mt-2">
    <div class="col-2 font-weight-bold  py-2">IP</div>
    <div class="col-10 border  py-2"><%= @exception_log.ip %></div>
  </div>
  <div class="row mt-2">
    <div class="col-2 font-weight-bold  py-2">错误信息</div>
    <div class="col-10 border  py-2"><%= sanitize @exception_log.body.gsub(/\n.*rvm|\n.*app|#</,"<br />******") %></div>
  </div>
  <div class="text-center mt-3">
    <%= link_to_back url: params[:back] || admin_exception_logs_path  %>
  </div>
</div>